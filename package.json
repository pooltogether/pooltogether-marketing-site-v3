{
  "name": "pooltogether-marketing-site-v3",
  "version": "3.0.0",
  "private": false,
  "author": "PoolTogether Inc.",
  "repository": "git@github.com:pooltogether/pool-marketing-site-v3.git",
  "scripts": {
    "dev": "NODE_ENV=dev npm-run-all --parallel start:app start:server",
    "start:app": "PORT=3000 node --max-old-space-size=8192 server.js",
    "start:server": "netlify-lambda serve functions",
    "postinstall": "netlify-lambda install",
    "build": "next build && next export && yarn postexport",
    "dist": "yarn build && netlify-lambda build functions",
    "export": "next export",
    "postexport": "node post-export.js",
    "distrelease": "yarn test && yarn dist",
    "start": "NODE_ENV=production PORT=80 node server.js",
    "test": "jest",
    "testcov": "jest --coverage --coverageDirectory=coverage && open ./coverage/index.html",
    "watch": "yarn run test --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.{ts,js}"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "moduleNameMapper": {
      "^lib/(.*)$": "<rootDir>/lib/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "verbose": true
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.5.2",
    "babel-jest": "^26.3.0",
    "jest": "^26.4.1",
    "netlify-lambda": "^1.6.3",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@apollo/client": "3.1.3",
    "@pooltogether/etherplex": "^0.2.3",
    "@pooltogether/pooltogether-contracts": "3.0.0-alpha.30",
    "@reach/dialog": "^0.10.5",
    "@reach/menu-button": "^0.10.5",
    "@reach/tooltip": "^0.10.5",
    "@vx/event": "^0.0.198",
    "@vx/gradient": "^0.0.198",
    "@vx/group": "^0.0.198",
    "@vx/mock-data": "^0.0.198",
    "@vx/responsive": "^0.0.198",
    "@vx/scale": "^0.0.198",
    "@vx/shape": "^0.0.198",
    "@vx/tooltip": "^0.0.198",
    "autoprefixer": "^9.8.6",
    "classnames": "^2.2.6",
    "ethers": "^4.0.47",
    "feather-icons-react": "^0.4.1",
    "framer-motion": "^2.6.9",
    "graphql": "^15.3.0",
    "http-proxy-middleware": "^1.0.5",
    "i18next": "^19.7.0",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-locize-backend": "^4.1.2",
    "i18next-node-locize-backend": "^3.1.2",
    "next": "9.5.3",
    "next-i18next": "^4.5.0",
    "next-images": "^1.4.1",
    "postcss-easy-import": "^3.0.0",
    "query-string": "^6.13.1",
    "react": "16.13.1",
    "react-content-loader": "^5.1.1",
    "react-countup": "^4.3.3",
    "react-dom": "16.13.1",
    "react-i18next": "11.7.0",
    "tailwindcss": "^1.8.6"
  }
}
